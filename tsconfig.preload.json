{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": ".vite/build",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["node"],
    "noEmit": false,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/renderer/*"],
      "@assets/*": ["./assets/*"],
      "@common/*": ["./src/common/*"],
      "@main/*": ["./src/main/*"],
      "@renderer/*": ["./src/renderer/*"],
      "@ipc/*": ["./src/ipc/*"],
      "@src/*": ["./src/*"]
    }
  },
  "include": ["src/preload/**/*", "src/ipc/**/*.preload.ts", "src/ipc/**/*.types.ts"],
  "exclude": ["node_modules"]
}

