{
  "name": "desktop",
  "version": "0.1.0",
  "description": "Secure boilerplate for Electron app based on Vite",
  "private": true,
  "author": {
    "email": "kozackunisoft@gmail.com",
    "name": "Alex Kozack",
    "url": "https://kozack.me"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:renderer": "cd ./packages/renderer && vite build",
    "compile": "cross-env MODE=production npm run build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
    "test": "npm run test:main && npm run test:preload && npm run test:renderer && npm run test:e2e",
    "test:e2e": "npm run build && vitest run",
    "test:main": "vitest run -r packages/main --passWithNoTests",
    "test:preload": "vitest run -r packages/preload --passWithNoTests",
    "test:renderer": "vitest run -r packages/renderer --passWithNoTests",
    "watch": "node scripts/watch.mjs",
    "lint": "eslint . --ext js,mjs,cjs,ts,mts,cts,tsx",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "npm run typecheck:main && npm run typecheck:preload && npm run typecheck:renderer",
    "postinstall": "cross-env ELECTRON_RUN_AS_NODE=1 electron scripts/update-electron-vendors.mjs",
    "format": "npx prettier --write \"**/*.{js,mjs,cjs,ts,mts,cts,tsx,json}\""
  },
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.2",
    "@types/react-modal": "^3.13.1",
    "@types/react-scroll": "^1.8.3",
    "@types/webpack-env": "^1.16.3",
    "@typescript-eslint/eslint-plugin": "5.36.2",
    "@typescript-eslint/parser": "^5.3.0",
    "@vitejs/plugin-react": "2.1.0",
    "backend": "0.0.1",
    "classnames": "^2.3.1",
    "cross-env": "7.0.3",
    "css-loader": "^6.5.1",
    "electron": "20.1.3",
    "electron-builder": "23.3.3",
    "eslint": "8.23.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^6.4.0",
    "happy-dom": "6.0.4",
    "nano-staged": "0.8.0",
    "node-loader": "^2.0.0",
    "playwright": "1.25.2",
    "react-hot-loader": "^4.13.0",
    "shared-types": "0.0.1",
    "simple-git-hooks": "2.8.0",
    "style-loader": "^3.3.1",
    "ts-loader": "9.2.6",
    "typescript": "4.8.3",
    "typescript-styled-plugin": "^0.18.2",
    "unplugin-auto-expose": "0.0.3",
    "url-loader": "^4.1.1",
    "vite": "3.1.0",
    "vitest": "0.23.2",
    "webpack": "^5.62.1"
  },
  "dependencies": {
    "@hot-loader/react-dom": "^17.0.1",
    "@monaco-editor/react": "^4.4.2",
    "@trpc/client": "^9.26.2",
    "@trpc/react": "^9.26.2",
    "@trpc/server": "^9.26.2",
    "electron-updater": "5.2.1",
    "jotai": "^1.4.3",
    "oli-design-system": "0.0.3",
    "react": "^17.0.2",
    "react-css-transition-replace": "^4.0.5",
    "react-dom": "^17.0.2",
    "react-query": "3",
    "react-scroll": "^1.8.5",
    "react-textfit": "^1.1.1",
    "styled-components": "^5.3.6",
    "textfit": "^2.4.0",
    "use-fit-text": "^2.4.0"
  }
}
